<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seed_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/plant_data_margin_start"
            android:paddingTop="@dimen/plant_data_margin"
            android:paddingEnd="@dimen/plant_data_margin"
            android:textSize="@dimen/plant_data_text_size_land" />

        <TextView
            android:id="@+id/plant_genotype_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/plant_data_margin_start"
            android:paddingTop="@dimen/plant_data_margin"
            android:paddingEnd="@dimen/plant_data_margin"
            android:textSize="@dimen/plant_data_text_size_land" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/harvest_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/plant_data_margin_start"
            android:paddingTop="@dimen/plant_data_margin"
            android:paddingEnd="@dimen/plant_data_margin"
            android:textSize="@dimen/plant_data_text_size_land" />

        <TextView
            android:id="@+id/high_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/plant_data_margin"
            android:paddingEnd="@dimen/plant_data_margin"
            android:textSize="@dimen/plant_data_text_size_land"/>

        <TextView
            android:id="@+id/flower_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/plant_data_margin"
            android:paddingStart="@dimen/plant_data_margin"
            android:paddingEnd="@dimen/plant_data_margin"
            android:textSize="@dimen/plant_data_text_size_land" />

    </LinearLayout>

</LinearLayout>