<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/counter_input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/text_size"
        android:text="@dimen/counter_view_text_size"
        android:padding="8dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_buttons"
        android:paddingEnd="@dimen/padding_buttons">

        <Button
            android:id="@+id/counter_button_up_id"
            android:layout_width="@dimen/counter_button_width"
            android:layout_height="@dimen/counter_button_height"
            android:background="@drawable/button_up_selector"/>

        <Button
            android:id="@+id/counter_button_down_id"
            android:layout_width="@dimen/counter_button_width"
            android:layout_height="@dimen/counter_button_height"
            android:layout_marginTop="@dimen/button_down_margin_top"
            android:background="@drawable/button_down_selector"/>

    </LinearLayout>

</LinearLayout>