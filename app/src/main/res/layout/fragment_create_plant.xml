<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginStart="@dimen/margin_left"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:hint="@string/name_of_plant"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:padding="10dp"
            style="@style/label"/>

        <EditText
            android:hint="@string/flowering_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            style="@style/label"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.igiagante.thegarden.core.ui.CountView
            android:id="@+id/ph_soil_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.example.igiagante.thegarden.core.ui.CountView
            android:id="@+id/ec_soil_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/genotype"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            style="@style/label"/>

        <com.example.igiagante.thegarden.core.ui.CountView
            android:id="@+id/high_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>