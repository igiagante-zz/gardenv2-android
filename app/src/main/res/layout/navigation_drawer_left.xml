<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/header_navview" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_gardens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/garden_image"
            android:src="@drawable/ic_nutrients" />

        <Button
            android:id="@+id/nutrients_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/nutrients"
            android:textSize="@dimen/navigation_drawer_image_logout_text_size"
            android:typeface="sans"
            android:layout_marginStart="@dimen/navigation_drawer_image_logout_button_margin_start"
            android:padding="@dimen/navigation_drawer_image_logout_button_padding"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/settings"
            android:paddingEnd="@dimen/navigation_drawer_garden_name_padding"
            android:paddingStart="@dimen/navigation_drawer_garden_name_padding"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/navigation_drawer_garden_name_padding"
            android:paddingStart="@dimen/navigation_drawer_garden_name_padding"
            android:text="@string/settings"
            android:textSize="@dimen/navigation_drawer_image_logout_text_size"
            android:typeface="sans" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="@dimen/navigation_drawer_image_logout_margin_start"
            android:layout_width="@dimen/navigation_drawer_image_logout_size"
            android:layout_height="@dimen/navigation_drawer_image_logout_size"
            android:contentDescription="@string/garden_image"
            android:src="@drawable/ic_logout" />

        <Button
            android:id="@+id/logout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/logout"
            android:textSize="@dimen/navigation_drawer_image_logout_text_size"
            android:typeface="sans"
            android:layout_marginStart="@dimen/navigation_drawer_image_logout_button_margin_start"
            android:padding="@dimen/navigation_drawer_image_logout_button_padding"/>

    </LinearLayout>

</LinearLayout>