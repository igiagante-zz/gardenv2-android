<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/create_plant_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:background="?attr/colorPrimaryDark"
        android:elevation="@dimen/elevation_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/edit_plant_button_back"
                android:layout_width="@dimen/edit_plant_button_width"
                android:layout_height="@dimen/edit_plant_button_height"
                android:gravity="center_horizontal"
                android:background="@drawable/left_arrow"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/edit_plant_button_margin_top"/>

            <TextView
                android:id="@+id/create_plant_toolbar_title"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Main Data"
                android:layout_weight="0.8"
                android:gravity="center"/>

            <Button
                android:id="@+id/edit_plant_button_save"
                android:layout_width="@dimen/edit_plant_button_width"
                android:layout_height="@dimen/edit_plant_button_height"
                android:layout_marginEnd="@dimen/edit_plant_button_margin_end"
                android:gravity="center_horizontal"
                android:background="@drawable/button_check"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/edit_plant_button_margin_top"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewpager_create_plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/view_pager_margin_top" />

</RelativeLayout>

