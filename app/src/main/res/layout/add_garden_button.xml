<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingTop="8dp"
android:paddingBottom="8dp"
android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/navigation_drawer_garden_logo_size"
        android:layout_height="@dimen/navigation_drawer_garden_logo_size"
        android:id="@+id/rowIcon"
        android:layout_marginTop="@dimen/navigation_drawer_garden_logo_margin_top"
        android:layout_marginStart="@dimen/navigation_drawer_garden_logo_margin_start"
        android:layout_marginEnd="@dimen/navigation_drawer_garden_logo_margin_end"
        android:src="@drawable/ic_garden"
        android:contentDescription="@string/content_description_select_garden"/>

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/add_garden_button_id"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="@dimen/navigation_drawer_button_add_garden_padding"
        android:text="@string/add_new_garden"
        android:textSize="@dimen/navigation_drawer_button_add_garden_text_size"
        android:gravity="start|center_vertical"
        android:layout_marginStart="@dimen/navigation_drawer_button_add_garden_margin_start"
        android:background="@android:color/transparent"/>

</LinearLayout>